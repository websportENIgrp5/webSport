<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mon application ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/bundles/Bootstrap/css")
        @RenderSection("css", required: false)
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="moblie-menu-button">&nbsp;</div>
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Websport", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                        <span id="ChangeUnitDistance">
                            <a href="#" id="ChangeUnit" onclick="ChangeUnit()">| Changement unité</a>
                        </span>
                    </section>
                    @Html.Partial("_Menu")
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        @Html.Partial("_Footer")

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap/js")
        @Scripts.Render("~/bundles/Site/js")
        @*@Scripts.Render("~/bundles/chart/js")*@
        @RenderSection("scripts", required: false)

        <script type="text/javascript">
            unit = "km";


            function ChangeUnit()
            {
                if (unit === "km") {
                    unit = "miles";
                    $('.nbDistance').each(function () {
                        var element = $(this).text();
                        element = (element * 1000) / 1600;
                        $(this).text(element);
                    });
                }
                else{
                    unit = "km";
                    $('.nbDistance').each(function () {
                        var element = $(this).text();
                        element = (element * 1600) / 1000;
                        $(this).text(element);
                    });
                }
                $('.unite').each(function () {
                    $(this).text(unit);
                })
            }

        </script>
    </body>
</html>
