
@using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (TempData["NomImage"] != null)
    {
        <img src='~/Images/ProfilImage/@TempData["NomImage"].ToString()' , alt="Image" />
    }
    else
    {
        <img src="~/Images/profil-default.png" />
    }

    <input type="file" name="file" id="file"/>
    <input type="submit" name="Submit" id="Submit" value="Upload" />
}
    